{% import "components.njk" as components %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="generator" content="{{ eleventy.generator }}">

  {% include "head/meta-info.njk" %}

  {% block head %}
		<link rel="preload" href="/fonts/SportingGrotesque-Bold-latin.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/Epilogue[slnt,wght]-latin.woff2" as="font" type="font/woff2" crossorigin>
    <style>@layer reset, base, layout, component, page, utility;</style>

    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" media="print" href="/css/print.css">
    <script src="/js/theme.js"></script>
  {% endblock %}
</head>

<body>
{% block body %}
  {% include "site/header.njk" %}

  {% block main %}
    {{ content | safe }}
  {% endblock %}

  {% include "site/footer.njk" %}
{% endblock %}
</body>
</html>
