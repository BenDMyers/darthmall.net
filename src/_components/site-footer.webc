<footer id="site-footer" role="contentinfo"
        class="center max-inline-site flow pb-l type-body-3"
        style="--space:var(--space-m)">
  <hr />
  <div class="cluster justify-content-center">
    <p @raw="copyright()"></p>

    <a href="mailto:{{ site.a11y.contact }}?subject={{ site.a11y.subject }}&body={{ site.a11y.body }}"
       class="mi-auto">Report an accessibility issue</a>

    <nav>
      <ul class="cluster" style="--space:var(--space-xs)" role="list">
        <li><a href="/privacy/">Privacy</a></li>
				<script webc:type="js">
					social.map((link) => {
						let attrs = "";
						let content = link.text;

						if (link.rel) {
							attrs += ` rel="${link.rel}"`
						}

						if (link.icon) {
							attrs += ` title="${link.text}"`;
							content = `<icon-${link.icon}></icon-${link.icon}>`;
						}

						return `<li>
							<a href="${link.url}"${attrs}>${content}</a>
						</li>`;
					}).join("");
				</script>
      </ul>
    </nav>
  </div>
</footer>
