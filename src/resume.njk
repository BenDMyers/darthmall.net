---
title: Résumé
---

<section>
  <h2>Experience</h2>

  {% for job in resume.experience %}
    {% if not job.skip %}
      <h3>{{ job.title }}</h3>

      <aside>
        <p>{{ job.employer }}</p>
        <p>From {{ job.start }} to {{ job.end if job.end else "present" }}</p>
      </aside>

      <p>{{ job.description }}</p>
    {% endif %}
  {% endfor %}
</section>

<section>
  <h2>Skills</h2>

  {% for group in resume.skills %}
    <h3>{{ group.name }}</h3>

    <ul class="skills">

      {% for skill in group.skills | sort %}
        <li>{{ skill }}</li>
      {% endfor %}

    </ul>
  {% endfor %}
<section>

<section>
  <h2>Education</h2>

  <ul class="education">{% for degree in resume.education %}
    <li>{{ degree.name }} <small>{{ degree.institution }}</small></li>
  {% endfor %}</ul>
</section>
