---
title: Work
layout: layouts/base.njk
---

{% for project in collections.work %}
  {% if not project.draft %}
    <article style="--color-1:#{{ project.data.color }}">
      <h2>
        <a href="{{ project.url }}" class="card__link">{{ project.data.title }}</a>
      </h2>

      {{ project.templateContent | safe }}
    </article>
  {% endif %}
{% endfor %}
