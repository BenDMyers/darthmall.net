{
  "base-font-size": 16,
  "viewport": [320, 1140],
  "fluid": {
    "font-size": {
      "size": [16, 24],
      "scale": [1.125, 1.414],
      "steps": [-1, 5]
    },
    "fluid-space": {
      "size": [8, 12],
      "scale": [2, 2],
      "steps": [0, 3],
      "names": ["xs", "sm", "md", "lg"]
    }
  },
  "static": {
    "color-gray": {
      "darkest": "#222222",
      "darker": "#303030",
      "dark": "#6d6d6d",
      "light": "#959595",
      "lighter": "#eaeaea",
      "lightest": "#ffffff"
    },
    "font-stack": {
      "body": "'Epilogue, sans-serif'",
      "heading": "'\\'Sporting Grotesque\\', sans-serif'",
      "mono": "'\\'League Mono\\', monospace'"
    },
    "line-height": {
      "xs": 1,
      "sm": 1.15,
      "md": 1.5
    },
    "measure": {
      "md": "54ch",
      "lg": "78ch"
    },
    "space-relative": {
      "sm": "0.5em",
      "md": "1em",
      "lg": "2em",
      "xl": "4em"
    }
  }
}
