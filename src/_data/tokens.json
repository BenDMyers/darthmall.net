{
  "base-font-size": 16,
  "viewport": [320, 1280],
  "fluid": {
    "font-size": {
      "size": [16, 24],
      "scale": [1.125, 1.414],
      "steps": [-1, 5]
    },
    "space-fluid": {
      "size": [8, 12],
      "scale": [2, 2],
      "steps": [0, 4],
      "names": ["xs", "sm", "md", "lg", "xl"]
    }
  },
  "static": {
    "color-gray": {
      "1": "#ffffff",
      "2": "#eaeaea",
      "3": "#959595",
      "4": "#6d6d6d",
      "5": "#303030",
      "6": "#222222"
    },
    "color-magenta": {
      "1": "#A3224D"
    },
    "color-yellow": {
      "1": "#ddad3f"
    },
    "font-stack": {
      "body": "'Epilogue, sans-serif'",
      "heading": "'\\'Sporting Grotesque\\', sans-serif'",
      "mono": "'ui-monospace, monospace'"
    },
    "font-weight": {
      "regular": 275,
      "semi-bold": 350,
      "bold": 500,
      "'black'": 750
    },
    "icon": {
      "sm": "1.5rem",
      "md": "3rem",
      "lg": "4rem"
    },
    "line-height": {
      "xs": 1,
      "sm": 1.15,
      "md": 1.5
    },
    "measure": {
      "xs": "34ch",
      "sm": "42ch",
      "md": "54ch",
      "lg": "72ch",
      "xl": "88ch"
    },
    "space-relative": {
      "xs": "0.25em",
      "sm": "0.5em",
      "md": "1em",
      "lg": "2em",
      "xl": "4em"
    },
    "width": {
      "card": "20rem",
      "max-site": "80rem"
    }
  }
}
