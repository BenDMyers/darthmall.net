---
classes: h-entry
---

{% extends 'layouts/base.njk' %}

{% block content %}
  <header class="pad-block-xl" data-layout="grid">
    <h1 class="p-name" data-columns="all">{{ title | safe }}</h1>

    {% set meta -%}
      {% if date -%}
        <p class="margin-block-end-sm" data-columns="headings">
          {% formatDate date %}
        </p>
      {%- endif %}
      {% if tags -%}
        {% set comma = joiner("<br>") %}
        <p data-space="0">
          {% for t in tags -%}
            {{ comma() | safe }} {{ t }}
          {%- endfor %}
        </p>
      {%- endif %}
    {%- endset %}
    {% if meta %}
      <aside data-layout="grid">
        {{ meta | safe }}
      </aside>
    {% endif %}
  </header>

  {{ super() }}

  {% include "partials/webmentions.njk" %}

  {% set footer -%}
    {%- if backLink -%}
      <p><a href="{{ page.url | dirname }}/"><b>{{ backLink | safe }}</b></a></p>
    {%- endif -%}
    {%- if next -%}
      <p>Next: <a href="{{ next.page.url }}">{{ next.title | safe }}</a></p>
    {%- endif -%}
    {%- if prev -%}
      <p>Previous: <a href="{{ prev.page.url }}">{{ prev.title | safe }}</a></p>
    {%- endif -%}
  {%- endset %}

  {% if footer %}
    <footer>
      {{ footer | safe }}
    </footer>
  {% endif %}

{% endblock %}
