---
classes: h-entry
---

{% extends 'layouts/base.njk' %}

{% from "partials/macros/datetime.njk" import pubDate %}

{% block head %}
  <link href="{{ collections._styles | assetUrl('avatar.css') | url }}" rel="stylesheet">
  <link href="https://unpkg.com/prismjs@1.20.0/themes/prism.css" rel="stylesheet">
{% endblock %}

{% block content %}
  <header class="[ center ]">
    <h1 class="[ p-name ]">{{ title | safe }}</h1>

    {% if date %}
      <p class="[ dt-published ]">{{ pubDate(date) }}</p>
    {% endif %}
    <p class="[ h-card p-author ]" hidden>
      <a href="/" class="[ u-url ]">
        <span class="[ p-name ]">Evan Sheehan</span>
      </a>

      {% include "partials/components/avatar.njk" %}
    </p>
  </header>

  <div class="[ post ] [ flow center ] [ e-content ]">
    {{ content | safe }}
  </div>

  {% include "partials/components/webmentions.njk" %}


  {% set footer -%}
    {%- if backLink -%}
      <p><a href="{{ page.url | dirname }}/"><b>{{ backLink | safe }}</b></a></p>
    {%- endif -%}
    {%- if next -%}
      <p>Next: <a href="{{ next.page.url }}">{{ next.title | safe }}</a></p>
    {%- endif -%}
    {%- if prev -%}
      <p>Previous: <a href="{{ prev.page.url }}">{{ prev.title | safe }}</a></p>
    {%- endif -%}
  {%- endset %}

  {% if footer %}
    <footer class="[ center ] [ margin-top-3 ]">
      {{ footer | safe }}
    </footer>
  {% endif %}

{% endblock %}
