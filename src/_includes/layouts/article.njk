---
classes: h-entry
---

{% extends 'layouts/base.njk' %}

{% block head %}
  <link rel="preload" href="/fonts/SportingGrotesque-Bold-latin.woff2" as="font" type="font/woff2" crossorigin>
  <link href="https://unpkg.com/prismjs@1.20.0/themes/prism.css" rel="stylesheet" media="(prefers-color-scheme: light)">
  <link href="https://unpkg.com/prismjs@1.20.0/themes/prism-tomorrow.css" rel="stylesheet" media="(prefers-color-scheme: dark)">
  {{ super() }}
{% endblock %}

{% block content %}
  {% include "partials/page-title.njk" %}
  {% include "partials/theme-toggle.njk" %}
  <div class="stack e-content" data-layout="center">
    {% if date -%}
      <aside aria-label="publication date" class="align-self-start">
        <p>
          {% formatDate date %}
        </p>
      </aside>
    {%- endif %}
    {{ super() }}
  </div>

  {% if showWebmentions !== false %}
    {% include "partials/webmentions.njk" %}
  {% endif %}
{% endblock %}
