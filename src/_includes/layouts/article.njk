---
classes: h-entry
---

{% extends 'layouts/base.njk' %}

{% block head %}
  <link href="avatar.css" rel="stylesheet">
  <link href="https://unpkg.com/prismjs@1.20.0/themes/prism.css" rel="stylesheet">
{% endblock %}

{% block content %}
  <header>
    <h1 class="p-name">{{ title | safe }}</h1>

    {% if date %}
      <p>
        {% formatDate date, "font-heading color-slate"%}
      </p>
    {% endif %}
  </header>

  {{ super() }}

  {% include "partials/webmentions.njk" %}

  {% set footer -%}
    {%- if backLink -%}
      <p><a href="{{ page.url | dirname }}/"><b>{{ backLink | safe }}</b></a></p>
    {%- endif -%}
    {%- if next -%}
      <p>Next: <a href="{{ next.page.url }}">{{ next.title | safe }}</a></p>
    {%- endif -%}
    {%- if prev -%}
      <p>Previous: <a href="{{ prev.page.url }}">{{ prev.title | safe }}</a></p>
    {%- endif -%}
  {%- endset %}

  {% if footer %}
    <footer>
      {{ footer | safe }}
    </footer>
  {% endif %}

{% endblock %}
