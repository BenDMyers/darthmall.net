---
classes: h-entry
---

{% extends 'layouts/base.njk' %}

{% block content %}
  <header>
    <h1 class="p-name">{{ title | safe }}</h1>

    {% set meta -%}
      {% if date -%}
        <p>{% formatDate date %}</p>
      {%- endif %}
      {% if tags -%}
        {% set comma = joiner() %}
        <p>
          {% for t in tags -%}
            {{ comma() }} {{ t }}
          {%- endfor %}
        </p>
      {%- endif %}
    {%- endset %}
    {% if meta %}
      <aside>
        {{ meta | safe }}
      </aside>
    {% endif %}
  </header>

  {{ super() }}

  {% include "partials/webmentions.njk" %}

  {% set footer -%}
    {%- if backLink -%}
      <p><a href="{{ page.url | dirname }}/"><b>{{ backLink | safe }}</b></a></p>
    {%- endif -%}
    {%- if next -%}
      <p>Next: <a href="{{ next.page.url }}">{{ next.title | safe }}</a></p>
    {%- endif -%}
    {%- if prev -%}
      <p>Previous: <a href="{{ prev.page.url }}">{{ prev.title | safe }}</a></p>
    {%- endif -%}
  {%- endset %}

  {% if footer %}
    <footer>
      {{ footer | safe }}
    </footer>
  {% endif %}

{% endblock %}
