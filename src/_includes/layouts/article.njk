---
classes: h-entry
---

{% extends 'layouts/base.njk' %}

{% block content %}
  <header class="pad-block-xl" data-layout="grid">
    <h1 class="p-name" data-columns="all">{{ title | safe }}</h1>

    {% set meta -%}
      {% if date -%}
        <p class="margin-block-end-sm" data-columns="headings">
          {% formatDate date %}
        </p>
      {%- endif %}
      {% if tags -%}
        {% set comma = joiner("<br>") %}
        <p data-space="0">
          {% for t in tags -%}
            {{ comma() | safe }} {{ t }}
          {%- endfor %}
        </p>
      {%- endif %}
    {%- endset %}
    {% if meta %}
      <aside data-layout="grid">
        {{ meta | safe }}
      </aside>
    {% endif %}
  </header>

  <div class="stack e-content" data-layout="center">
    {{ super() }}
  </div>

  {% include "partials/webmentions.njk" %}
{% endblock %}
