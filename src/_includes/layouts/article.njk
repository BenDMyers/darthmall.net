{% extends 'layouts/base.njk' %}

{% from "partials/macros/datetime.njk" import pubDate %}

{% block head %}
<link href="https://unpkg.com/prismjs@1.20.0/themes/prism.css" rel="stylesheet">
{% endblock %}

{% block content %}
<article>
  <header>
    <h1>{{ title | safe }}</h1>

    {% if date %}
      <p>{{ pubDate(date) }}</p>
    {% endif %}
  </header>

  {{ content | safe }}

  {% set footer -%}
    {%- if backLink -%}
      <p><a href="{{ page.url | dirname }}/"><b>{{ backLink | safe }}</b></a></p>
    {%- endif -%}
    {%- if next -%}
      <p>Next: <a href="{{ next.page.url }}">{{ next.title | safe }}</a></p>
    {%- endif -%}
    {%- if prev -%}
      <p>Previous: <a href="{{ prev.page.url }}">{{ prev.title | safe }}</a></p>
    {%- endif -%}
  {%- endset %}

  {% if footer %}
    <footer>
      {{ footer | safe }}
    </footer>
  {% endif %}
</article>

{% endblock %}
