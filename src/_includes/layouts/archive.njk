{% extends 'layouts/base.njk' %}

{% block content %}
<main class="grid-container">
  <h1>{{ title }}</h1>

  {%- for post in collections.post -%}
  <article>
    <h2>
      <a href="{{ post.data.permalink }}">{{ post.data.title }}</a>
    </h2>
  </article>
  {%- endfor -%}

</main>
{% endblock %}
