{% extends 'layouts/base.njk' %}

{% block content %}
<main class="grid-container">
  <h1>{{ title }}</h1>

  {%- for post in collections.posts -%}
  <article>
    <h2>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>
    <p>
      <time datetime="{{ post.date | isoDateFilter }}">{{ post.date | dateFilter }}</time>
    </p>
    <p>{{ post.data.description }}</p>
  </article>
  {%- endfor -%}

</main>
{% endblock %}
