{% import "macros/posts.njk" as posts %}
{% import "macros/projects.njk" as projects %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  {% include "partials/meta-info.njk" %}

  <link rel="stylesheet" href="{{ collections._styles | assetUrl('style.css') | url }}">
  {% for css in styles %}
  <link rel="stylesheet" href="{{ collections._styles | assetUrl(css) | url }}">
  {% endfor %}
  <link rel="stylesheet" media="print" href="{{ collections._styles | assetUrl('print.css') | url }}">

  {% block head %}{% endblock %}
</head>

<body>
  {% include "partials/site-header.njk" %}

  {% set mainClasses = "" %}
  {% if classes %}
    {% set mainClasses = ' class="' + classes + '"' %}
  {% endif %}
  <main tabindex="-1"{{ mainClasses | safe }}>
    {% block content %}
      {% if title %}
        <h1 class="center">{{ title | safe }}</h1>
      {% endif %}

      {{ content | safe }}
    {% endblock content %}
  </main>

  {% include "partials/site-footer.njk" %}
</body>
</html>
