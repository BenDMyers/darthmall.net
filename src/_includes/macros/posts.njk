{% macro list(collection) %}
<ul>
  {% for post in collection %}
    <li>
      <strong>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </strong>
      <span>{{ post.data.description }}</span>
      <small>{% formatDate post.data.date %}</small>
    </li>
  {% endfor %}
</ul>
{% endmacro %}
