{% macro summary(post) %}
  <article class="line-height-2">
    <h2 class="font-heading size-2 margin-none">
      <a href="{{ post.url }}" class="color-ink">
        {{ post.data.title }}
      </a>
    </h2>
    <p class="margin-none size--1">
      {# {{ datetime.pubDate(post.data.date) }} #}
    </p>
    <p class="margin-top-1">{{ post.data.description }}</p>
  </article>
{% endmacro %}

{% macro list(collection) %}
  <div class="center flow flow-sp-3">
    {% for post in collection %}
      {{ summary(post) }}
    {% endfor %}
  </div>
{% endmacro %}
