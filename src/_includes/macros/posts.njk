{% macro list(collection) %}
<ul class="posts list-reset" data-layout="flow">
  {% for post in collection %}
    <li data-layout="flow" data-space="relative-xl">
      <strong>
        <a href="{{ post.url }}" class="type-display-2">{{ post.data.title }}</a>
      </strong>
      <br class="unstyled">
      <span data-space="relative-sm">{{ post.data.description }}</span>
      <br class="unstyled">
      <small data-space="relative-md">Published: {% formatDate post.data.date %}</small>
    </li>
  {% endfor %}
</ul>
{% endmacro %}
