<footer id="site-footer" role="contentinfo" class="pad-block-lg type-aside"
  data-layout="flow" data-columns="all">
  <hr />
  <div data-layout="cluster">
    <p class="margin-inline-end-auto">{% copyright %}</p>

    <nav>
      <ul class="list-reset" data-layout="cluster">
        {% for link in social %}
          {% set relAttr = "" %}
          {% set titleAttr = "" %}
          {% set content = link.text %}

          {% if link.rel %}
            {% set relAttr = " rel='" + link.rel + "'" %}
          {% endif %}

          {% if link.icon %}
            {% set titleAttr = " title='" + link.text + "'" %}
            {% set content %}{% include "icons/" + link.icon %}{% endset %}
          {% endif %}

          <li>
            <a href="{{ link.url }}"{{ relAttr | safe }}{{ titleAttr | safe }}>
              {{ content | safe }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</footer>
