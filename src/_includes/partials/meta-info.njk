{% if title and title != "Home" %}
  {% set pageTitle = title + ' - ' + site.title %}
{% else %}
  {% set pageTitle = site.title %}
{% endif %}

{% set canonicalUrl %}{{ site.url }}{{ page.url }}{% endset %}

<title>{{ pageTitle }}</title>

<link rel="canonical" href="{{ canonicalUrl }}">

<meta property="og:site_name" content="{{ site.title }}">
{% if title %}
  <meta property="og:title" content="{{ title }}">
{% endif %}
<meta property="og:type" content="website">
<meta property="og:url" content="{{ canonicalUrl }}">

<meta property="twitter:creator" content="@darth_mall">

{% if cover %}
  <meta property="og:image" content="{{ site.url }}{{ cover }}">
  <meta property="twitter:image" content="{{ site.url }}{{ cover }}">
  <meta property="og:image:alt" content="{{ coverAlt or '' }}">
  <meta property="twitter:image:alt" content="{{ coverAlt or '' }}">
{% endif %}
<meta property="description" content="{{ description or site.description }}">
<meta property="og:description" content="{{ description or site.description }}">
<meta property="twitter:description" content="{{ description or site.description }}">

{% if seo.image %}
  <meta property="og:image" content="{{ site.url }}{{ seo.image }}">
  <meta property="twitter:image" content="{{ site.url }}{{ seo.image }}">
{% endif %}

{# For IndieAuth #}
<link rel="me authn" href="https://github.com/darthmall" />

<link rel="webmention" href="https://webmention.io/darthmall.net/webmention" />
<link rel="pingback" href="https://webmention.io/darthmall.net/xmlrpc" />
