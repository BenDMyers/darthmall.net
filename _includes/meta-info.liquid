<title>
	{%- if title %}{{ title | escape }} - {% endif -%}
	{{ site.title | escape }}
</title>

<meta property="og:site_name" content="{{ site.title }}">
<meta webc:if="title" property="og:title" content="{{ title }}">
<meta property="og:type" content="website">

{% capture canonical %}{{ site.url }}{{ page.url }}{% endcapture %}
<link rel="canonical" href="{{ canonical }}">
<meta property="og:url" content="{{ canonical }}">

<meta property="twitter:creator" content="@darth_mall">

{% if cover %}
	{% capture coverUrl %}{{ site.url }}{{ cover }}{% endcapture %}
	<meta property="og:image" content="{{ coverUrl }}">
	<meta property="twitter:image" content="{{ coverUrl }}">
	<meta property="og:image:alt" content="{{ coverAlt }}">
	<meta property="twitter:image:alt" content="{{ coverAlt }}">
{% endif %}

{% capture desc %}{{ description | default: site.description }}{% endcapture %}
<meta name="description" content="{{ desc }}">
<meta property="og:description" content="{{ desc }}">
<meta property="twitter:description" content="{{ desc }}">

<link rel="me authn" href="https://github.com/darthmall">

<link rel="webmention" href="https://webmention.io/darthmall.net/webmention">
<link rel="pingback" href="https://webmention.io/darthmall.net/xmlrpc">
